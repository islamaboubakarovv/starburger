{% extends 'base.html.twig' %}

{% block title %}
  {% for articles in articles %}
    {{articles.article.titre}}
  {% endfor %}
{% endblock %}

{% block body %}
<div class="bloc-haut">
  <div style="width:100%; height:150px; overflow:hidden">
    <img src="/images/illustrations/journal.jpg" class="img-haut" style="margin-top: -450px;"/>
  </div>
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v12.0" nonce="jrGgztzM"></script>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
{% for articles in articles %}

  <div class="surtext">
    <h1>Nos actualités</h1>
    <p>Découvrez ABC au quotidien</p>
  </div>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/accueil">Accueil</a></li>
      <li class="breadcrumb-item"><a href="/actualites">Actualités</a></li>
      <li class="breadcrumb-item active" aria-current="page">{{articles.article.titre}}</li>
    </ol>
  </nav>
</div>
<div class="container shadow-sm p-5 my-5 bg-white rounded container-article">

    <div class="row pb-4">
        <div class="col-lg-12 col-md-12 text-center">
            <h2 style="color:#95683E;">{{articles.article.titre}}</h2>
        </div>
    </div>
    <div class="row pb-4">
      <div class="col-lg-12 col-md-12 text-center">
        <div class="text-center">
            <img src="uploads/images/{{articles.image}}" class="img-article">
        </div>
        <div class="text-justify">
            <p>{{articles.article.contenu}}</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 share-button">
        <p>Partagez cet article !</p>
        <div class="fb-share-button" data-href="http://127.0.0.1:8000/article?id={{articles.article.id}}" data-layout="button" data-size="large">
          <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2F127.0.0.1%3A8000%2Farticle%3Fid%3D1&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Partager</a>
        </div>
        <a class="twitter-share-button" target="_blank" rel="noopener noreferrer" data-size="large" href="http://www.twitter.com/share?text="+{{articles.article.titre}}>Tweeter</a>
      </div>
    </div>


</div>
{% endfor %}
{% endblock %}
