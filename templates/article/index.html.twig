{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<div class="bloc-haut">
  <div style="width:100%; height:150px; overflow:hidden">
    <img src="/images/illustrations/journal.jpg" class="img-haut" style="margin-top: -450px;"/>
  </div>
  <div class="surtext">
    <h1>Nos actualités</h1>
    <p>Découvrez ABC au quotidien</p>
  </div>
</div>
<div class="container shadow-sm p-5 mb-5 bg-white rounded container-article">
{% for articles in articles %}
<div class="row py-4 px-lg-5">
        <div class="col-lg-12 col-md-12 text-center">
            <h2 style="color:#95683E;">{{articles.article.titre}}</h2>
        </div>
    </div>
    <div class="text-center">
        <img src="{{articles.adresseImage}}" class="img-article">
    </div>
    <div class="text-justify">
        <p>{{articles.article.contenu}}</p>
    </div>
</div>
{% endfor %}
{% endblock %}
