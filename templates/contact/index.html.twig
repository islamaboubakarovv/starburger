{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}
{% form_theme projet_form 'bootstrap_5_layout.html.twig' %}
{% block body %}
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
<div class="bloc-haut">
  <div style="width:100%; height:150px; overflow:hidden">
    <img src="/images/illustrations/journal.jpg" class="img-haut" style="margin-top: -450px;"/>
  </div>
  <div class="surtext">
    <h1>Nous contacter</h1>
  </div>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="./">Accueil</a></li>
      <li class="breadcrumb-item">Nous contacter</li>
    </ol>
  </nav>
</div>
<div class="container shadow-sm p-5 my-5 bg-white rounded">
<div class="row">
        <div class="row text-center">
            <h2>Où nous trouver ?</h2>
        </div>
        <div class="col">
            <div class="row my-3">
                <p><img src="images/logos/logo_horloge.svg" class="img-contact"><b>Horaires :</b> Du lundi au samedi de 8h à 18h</p>
            </div>
            <div class="row my-3">
                <p><img src="images/logos/logo_maison.svg" class="img-contact"><b>Adresse :</b> Zone Artisanale, 72140, Rouez en Champagne</p>
            </div>
            <div class="row my-3">
                <p><img src="images/logos/logo_téléphone.svg" class="img-contact"><b>Téléphone :</b> 02 47 36 70 34</p>
            </div>
            <div class="row my-3">
                <p><img src="images/logos/logo_mail.svg" class="img-contact"><b>E-mail :</b> infos@legermain.com</p>
            </div>
        </div>
        <div class="col">
            <div id="map" class="float-end">
            </div>
        </div>
    </div>
</div>
<div class="container shadow-sm p-5 my-5 bg-white rounded">
    <div class="row text-center">
        <h2>Demander un devis</h2>
    </div>
    <div class="row form-contact">
    {{ form_start(projet_form) }}
        {{ form_row(projet_form.objet) }}
        {{ form_row(projet_form.description, {'attr': {'class': 'form-contact-desc'}}) }}
        <div class="text-center">
            {% for message in app.flashes('success') %}
                <p>{{ message }}</p>
            {% endfor %}
            {{ form_widget(projet_form.valider, {'attr': {'class': 'form-contact-button'}}) }}
            <button type="button" class="btn btn-outline-primary form-return-button" onclick = "history.back()">Retour</button>
        </div>
    {{ form_end(projet_form) }}
    </div>
</div>
<!-- Fichiers Javascript -->
        <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
	<script type="text/javascript">
            var lat = 48.144826380120264;
            var lon = -0.11701388074094442;
            var macarte = null;
            function initMap() {
                macarte = L.map('map').setView([lat, lon], 11);
                L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
                    minZoom: 1,
                    maxZoom: 20
                }).addTo(macarte);
                var marker = L.marker([lat, lon]).addTo(macarte);
            }
            window.onload = function(){
		initMap(); 
            };
        </script>
{% endblock %}
