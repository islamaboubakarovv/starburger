{% extends 'base.html.twig' %}

{% block title %}Galerie index{% endblock %}

{% block body %}
    <h1>Galerie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Taille</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for galerie in galeries %}
            <tr>
                <td>{{ galerie.id }}</td>
                <td>{{ galerie.nom }}</td>
                <td>{{ galerie.taille }}</td>
                <td>
                    <a href="{{ path('galerie_show', {'id': galerie.id}) }}">show</a>
                    <a href="{{ path('galerie_edit', {'id': galerie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('galerie_new') }}">Create new</a>
{% endblock %}
