{% extends 'base.html.twig' %}
{% block title %}Nous Rejoindre{% endblock %}
{% form_theme candidat_form 'bootstrap_5_layout.html.twig' %}
{% block body %}
{% for offres in offres %}
<div class="bloc-haut">
  <div style="width:100%; height:150px; overflow:hidden">
    <img src="/images/illustrations/nous_rejoindre.jpg" class="img-haut" style="margin-top: -450px;"/>
  </div>
  <div class="surtext">
    <h1>Nous rejoindre</h1>
  </div>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="./accueil">Accueil</a></li>
      <li class="breadcrumb-item"><a href="./liste_offres">Offre d'emplois</a></li>
      <li class="breadcrumb-item">Nous rejoindre</li>
    </ol>
  </nav>
</div>

<div class="container shadow-sm px-lg-5 px-4 py-4 my-5 bg-white rounded container-article">

    <div class="row pb-4">
        <div class="col-lg-12 col-md-12 text-center">
            <h2 style="color:#95683E;">{{offres.poste}}</h2>
        </div>
    </div>
    <h3>Type de contrat</h3>
    <div class="text-justify">
        <p>{{offres.typeContrat}}</p>
    </div>
    <h3>Description</h3>
    <div class="text-justify">
        <p>{{offres.description}}</p>
    </div>
    <h3>Pr√©requis</h3>
    <div class="text-justify">
        <p>{{offres.prerequis}}</p>
    </div>
</div>
{% endfor %}

</div>
<div class="container shadow-sm p-5 my-5 bg-white rounded">
    <div class="row text-center">
        <h2 class="h2">Veuillez remplir ce formulaire</h2>
    </div>
    <div class="row form-candidat">
        <div class="col-6">
        {{form_start(candidat_form)}}
            {{ form_row(candidat_form.nom) }}
            {{ form_row(candidat_form.prenom) }}
            {{ form_row(candidat_form.telephone) }}
            {{ form_row(candidat_form.mail) }}
        </div>
        <div class="col-6">
            {{ form_row(candidat_form.infoComp, {'attr': {'class': 'form-candidat-infoComp'}}) }}
            {# {{ form_row(candidat_form.captcha, {'attr': {'class': 'form-candidat-captcha'}}) }} #}
        </div>
    </div>
    <div class="row form-candidat">
        <div class="col-6">
            {{ form_row(candidat_form.cv) }}
            {{ form_row(candidat_form.envoyer, {'attr': {'class': 'form-candidat-envoyer'}}) }}
        </div>
        <div class="col-6">
            {{ form_row(candidat_form.lm) }}
            <button type="button" class="btn btn-outline-primary form-candidat-retour" onclick = "history.back()">Retour</button>
        {{form_end(candidat_form)}}
        </div>
    </div>
</div>
{% endblock %}
