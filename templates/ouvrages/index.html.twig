	<!-- script js pour afficher texte en position absolue -->
	{% block javascripts %}
		<script type="text/javascript">
			var myLayer = document.createElement('div');
myLayer.id = 'bookingLayer';
myLayer.style.position = 'relative';
myLayer.style.zIndex = 1;
myLayer.style.left = '590px';
myLayer.style.top = '700px';
myLayer.style.width = '160px';
myLayer.style.height = '145px';
myLayer.style.padding = '10px';
myLayer.style.background = '#95683E';
myLayer.style.color='#ffffff';
myLayer.style.textAlign="center";
myLayer.innerHTML = 'Texte grid';
document.body.appendChild(myLayer);
// fonctions pour changer texte du bloc
function changeText(text) {
var display = document.getElementById('bookingLayer');
display.innerHTML = "";
display.innerHTML = text;
}
// texte par défaut
function defaultText() {
var display = document.getElementById('bookingLayer');
display.innerHTML = "";
display.innerHTML = "passez le curseur sur un ouvrage";
}
		</script>
